<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>üå§Ô∏è Panel Meteorol√≥gico ‚Äî Municipio de L√°zaro C√°rdenas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.4.0/dist/leaflet.css"
    />
    <script src="https://unpkg.com/leaflet@1.4.0/dist/leaflet.js"></script>
    <style>
      body {
        margin: 0;
        font-family: sans-serif;
      }
      #map,
      #windy {
        width: 100%;
        height: 45vh;
        min-height: 400px;
        border-radius: 0.5rem;
      }
      .badge-huracan {
        background-color: red;
      }
      .badge-tormenta {
        background-color: orange;
      }
      .badge-depresion {
        background-color: blue;
      }
    </style>
  </head>
  <body class="container py-4">
    <title>üå§Ô∏è Panel Meteorol√≥gico ‚Äî Municipio de L√°zaro C√°rdenas</title>
    <h1 class="mb-4 text-center">
      üå§Ô∏è Panel Meteorol√≥gico ‚Äî Municipio de L√°zaro C√°rdenas
    </h1>

    <% let masCercano; if (ciclones.length > 0) { const ordenados =
    [...ciclones].sort((a, b) => (a.distanciaKM || 9999) - (b.distanciaKM ||
    9999)); masCercano = ordenados[0]; } %>

    <div class="row g-3 mb-4">
      <div class="col-lg-6">
        <div class="card h-100">
          <div class="card-header">üó∫Ô∏è Mapa Interactivo</div>
          <div class="card-body p-0">
            <div id="map"></div>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="card h-100">
          <div class="card-header">üå¨Ô∏è Vientos actuales (Windy)</div>
          <div class="card-body p-0">
            <div id="windy"></div>
          </div>
        </div>
      </div>
    </div>

    <% if (ciclones.length > 0) { %>
    <div class="row mb-4">
      <div class="col-md-4">
        <div class="card text-bg-primary">
          <div class="card-body text-center">
            <h5 class="card-title">üå™Ô∏è Ciclones activos</h5>
            <p class="card-text fs-3 fw-bold"><%= ciclones.length %></p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-bg-info">
          <div class="card-body text-center">
            <h5 class="card-title">üìç M√°s cercano</h5>
            <p class="card-text">
              <%= masCercano.title %> ‚Äî <%= masCercano.distanciaKM %> km
            </p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-bg-light">
          <div class="card-body text-center">
            <h5 class="card-title">üïí √öltima actualizaci√≥n</h5>
            <p class="card-text"><%= masCercano.pubDate %></p>
          </div>
        </div>
      </div>
    </div>
    <% } else { %>
    <p>No hay ciclones activos actualmente.</p>
    <% } %> <% if (ciclones.length > 0) { %>
    <input
      class="form-control mb-3"
      placeholder="üîç Buscar fen√≥meno..."
      oninput="filtrarTabla(this.value)"
    />
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead class="table-light">
          <tr>
            <th>Fen√≥meno</th>
            <th>√öltima actualizaci√≥n</th>
            <th>Proximidad a L√°zaro C√°rdenas</th>
          </tr>
        </thead>
        <tbody>
          <% ciclones.forEach(c => { %>
          <tr
            class="<%= c.distanciaKM < 500 ? 'table-danger' : c.distanciaKM < 1000 ? 'table-warning' : 'table-success' %>"
          >
            <td>
              <strong><%= c.title %></strong>
              <% if (c.title.toLowerCase().includes('hurricane')) { %>
              <span class="badge badge-huracan">Hurac√°n</span>
              <% } else if (c.title.toLowerCase().includes('storm')) { %>
              <span class="badge badge-tormenta">Tormenta</span>
              <% } else if (c.title.toLowerCase().includes('depression')) { %>
              <span class="badge badge-depresion">Depresi√≥n</span>
              <% } %>
              <br />
              <a
                href="#"
                class="btn btn-sm btn-primary mt-1"
                data-bs-toggle="modal"
                data-bs-target="#detalleModal"
                data-url="<%= c.link %>"
                >Ver detalles</a
              >
            </td>
            <td><%= c.pubDate %></td>
            <td>
              <%= c.distanciaKM ? c.distanciaKM + ' km' : 'No disponible' %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% if (refugios && refugios.length > 0) { %>
    <div class="card mt-5">
      <div class="card-header bg-success text-white">
        üèöÔ∏è Refugios Temporales Habilitados
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Direcci√≥n</th>
                <th>Capacidad</th>
                <th>Estatus</th>
              </tr>
            </thead>
            <tbody>
              <% refugios.forEach(r => { %>
              <tr>
                <td><%= r.nombre %></td>
                <td><%= r.direccion %></td>
                <td><%= r.capacidad || 'No disponible' %></td>
                <td>
                  <% if (r.estatus === 'activo') { %>
                  <span class="badge bg-success">Activo</span>
                  <% } else { %>
                  <span class="badge bg-secondary"><%= r.estatus %></span>
                  <% } %>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <% } %>

    <div class="card mt-4">
      <div class="card-header">üó∫Ô∏è Mapa de Refugios Temporales</div>
      <div class="card-body p-0">
        <div id="refugiosMap" style="width: 100%; height: 400px"></div>
      </div>
    </div>

    
    <% } %>

    <div
      class="alert alert-info d-flex justify-content-between align-items-center mt-4"
    >
      <span>üõ° Estado de servicios externos:</span>
      <span>
        NOAA: <span class="badge bg-success">Operativo</span> Windy:
        <span class="badge bg-success">OK</span> Conagua:
        <span class="badge bg-warning">En espera</span>
      </span>
    </div>

    <div class="card mt-4">
      <div class="card-header">üõ† Informaci√≥n t√©cnica del sistema</div>
      <div class="card-body">
        <p>
          <strong>√öltima sincronizaci√≥n de datos:</strong> <%= new
          Date().toLocaleString() %>
        </p>
        <p><strong>Frecuencia de actualizaci√≥n:</strong> Cada 5 minutos</p>
        <p>
          <strong>Fuente primaria:</strong> NOAA (https://www.nhc.noaa.gov/)
        </p>
        <p><strong>Fuente de viento en tiempo real:</strong> Windy API</p>
        <p>
          <strong>Desarrollado por:</strong> AuroraTI.MX | Powered by
          Node.js + EJS
        </p>
      </div>
    </div>

    <div class="card mt-4">
      <div class="card-header">üì± Enlaces a Conagua / SMN</div>
      <div class="card-body">
        <ul>
          <li>
            <a
              href="https://smn.conagua.gob.mx/es/boletines/avisos-ciclones-tropicales"
              target="_blank"
              >Boletines oficiales del SMN</a
            >
          </li>
          <li>
            <a
              href="https://smn.conagua.gob.mx/es/pronostico-del-tiempo-por-ciudad?estado=MIC&ciudad=CD.%20LAZARO%20CARDENAS"
              target="_blank"
              >Clima actual en L√°zaro C√°rdenas</a
            >
          </li>
          <li>
            <a
              href="https://smn.conagua.gob.mx/es/alertas/avisos-a-la-poblacion"
              target="_blank"
              >Avisos a la poblaci√≥n</a
            >
          </li>
        </ul>
      </div>
    </div>

    <script>
        const ciclones = <%- JSON.stringify(ciclones) %>;
        const map = L.map('map').setView([15, -110], 4);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { maxZoom: 10 }).addTo(map);
        ciclones.forEach(c => {
          if (c.lat && c.lon) {
            L.marker([c.lat, c.lon]).addTo(map).bindTooltip(
              `${c.title} ‚Äî ${c.distanciaKM ? `${c.distanciaKM} km` : 'Distancia N/D'}`
            ).bindPopup(`
              <strong>${c.title}</strong><br>
              <a href="${c.link}" target="_blank">Ver m√°s</a><br>
              ${c.distanciaKM ? `<em>Aprox. ${c.distanciaKM} km de L√°zaro C√°rdenas</em>` : ''}
            `);
          }
        });

        function filtrarTabla(valor) {
          valor = valor.toLowerCase();
          document.querySelectorAll("tbody tr").forEach(row => {
            row.style.display = row.innerText.toLowerCase().includes(valor) ? '' : 'none';
          });
        }

          const refugios = <%- JSON.stringify(refugios) %>;
      const refugiosMap = L.map('refugiosMap').setView([17.95, -102.19], 12);
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { maxZoom: 18 }).addTo(refugiosMap);

      refugios.forEach(r => {
        if (r.lat && r.lon) {
          L.marker([r.lat, r.lon]).addTo(refugiosMap).bindPopup(`
            <strong>${r.nombre}</strong><br>
            ${r.direccion}<br>
            Capacidad: ${r.capacidad}<br>
            Estatus: <span style="color: ${r.estatus === 'Activo' ? 'green' : 'gray'}">${r.estatus}</span>
          `);
        }
      });
    </script>

    <script src="https://api.windy.com/assets/map-forecast/libBoot.js"></script>
    <script>
      const options = {
        key: "UykdEzqX6nPn8bs1JDzu2UMx6mwD0O01",
        lat: 15,
        lon: -105,
        zoom: 4,
        container: "windy",
        overlay: "wind",
      };
      if (window.windyInit) {
        windyInit(options, (windyAPI) => {
          console.log("‚úÖ Windy API cargada correctamente");
        });
      } else {
        console.error("‚ùå Windy API no cargada");
      }
    </script>

    <div
      class="modal fade"
      id="detalleModal"
      tabindex="-1"
      aria-labelledby="detalleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Detalle del fen√≥meno</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Cerrar"
            ></button>
          </div>
          <div class="modal-body p-0">
            <iframe
              id="modalIframe"
              src=""
              frameborder="0"
              style="width: 100%; height: 80vh"
            ></iframe>
          </div>
        </div>
      </div>
    </div>

    <script>
      document
        .getElementById("detalleModal")
        .addEventListener("show.bs.modal", function (event) {
          const button = event.relatedTarget;
          const url = button.getAttribute("data-url");
          document.getElementById("modalIframe").src = url;
        });
    </script>
  </body>
</html>
